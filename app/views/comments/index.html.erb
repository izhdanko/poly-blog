<p style="color: green"><%= notice %></p>

<h1>Comments</h1>

<div id="comments">
  <% @comments.each do |comment| %>
    <%= render comment %>
    <div class="form-group mb-3">
      <%= link_to "Show this comment", comment %>
    </div>
  <% end %>
</div>

<div class="form-group mb-3">
  <%= link_to "New comment", new_comment_path %>
</div>  
