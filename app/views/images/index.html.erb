<p style="color: green"><%= notice %></p>

<h1>Images</h1>

<div id="images">
  <% @images.each do |image| %>
    <%= render image %>
    <div class="form-group mb-3">
      <%= link_to "Show this image", image %>
    </div>
  <% end %>
</div>

<div class="form-group mb-3">
  <%= link_to "New image", new_image_path %>
</div>  
